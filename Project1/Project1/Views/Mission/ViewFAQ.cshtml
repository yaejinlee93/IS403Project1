@model IEnumerable<Project1.Models.MissionQuestions>

@{
    ViewBag.Title = "Mission FAQ";
}

<h2>@ViewBag.missionName Mission</h2>

    <h2>Frequently Asked Questions</h2>

    @foreach (var item in Model)
    {
                <table class ="table">
                <tr>
                    <th style="font-size:25px;">
                        @Html.DisplayFor(modelItem => item.mqQuestion)
                    </th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.mqAnswer)
                        <br /><br />
                        @using (Html.BeginForm("AnswerQuestion", "Mission", FormMethod.Post, new { id = item.missionQuestionID }))
                        {
                            @Html.Label("Answer this Question")
                            <input autofocus style="display:block" class="form-control" type="text" id="answer" name="answer" value="" />
                            <input style="display:none" type="number" id="missionQuestionID" name="missionQuestionID" value="@item.missionQuestionID" />
                            <br />
                            <input class="btn btn-default" type="submit" value="Submit" />
                        }
                    </td>
                </tr>
              </table>
    }

    <br />
    <br />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Ask a Question:</h2>
            <form>
                <div class="form-group">
                    <!-- Name field -->
                    <label class="control-label requiredField" for="name">Name</label>
                    <input class="form-control" id="name" name="name" type="text" />
                </div>

                <div class="form-group">
                    <!-- Message field -->
                    <label class="control-label " for="message">Question</label>
                    <textarea class="form-control" cols="40" id="question" name="question" rows="8"></textarea>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary " name="submit" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

